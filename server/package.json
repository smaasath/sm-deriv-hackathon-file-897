{
  "name": "gemauction-api",
  "version": "1.0.0",
  "description": "Gem Auction Project",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "node dist/server.js",
    "start:dev": "nodemon",
    "start:debug": "node --inspect dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint:staged": "lint-staged"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.823.0",
    "@aws-sdk/s3-request-presigner": "^3.823.0",
    "@types/nodemailer": "6.4.17",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "autobind-decorator": "2.4.0",
    "axios": "1.9.0",
    "bcrypt": "5.1.1",
    "body-parser": "2.2.0",
    "cors": "2.8.5",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "google-auth-library": "^9.15.1",
    "ioredis": "5.6.1",
    "jest": "29.7.0",
    "jsonwebtoken": "9.0.2",
    "jwt-decode": "4.0.0",
    "module-alias": "^2.2.3",
    "nodemailer": "7.0.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pg": "^8.15.6",
    "sequelize": "6.37.7",
    "sequelize-typescript": "2.1.6",
    "socket.io": "4.8.1",
    "typescript": "5.8.3",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/bcrypt": "5.0.2",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.1",
    "@types/jsonwebtoken": "9.0.9",
    "@types/node": "^22.15.29",
    "@types/passport-jwt": "4.0.1",
    "@types/sequelize": "4.28.20",
    "@types/uuid": "10.0.0",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "nodemon": "3.1.10",
    "prettier": "3.5.3",
    "typescript-eslint": "^8.32.0"
  },
  "author": "AtomyCoders",
  "license": "UNLICENSED",
  "jest": {
    "roots": [
      "src"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "quoteProps": "as-needed",
    "jsxSingleQuote": false
  },
  "lint-staged": {
    "src/**/*.ts": [
      "git add .",
      "eslint --fix",
      "prettier --write"
    ]
  },
  "tsconfig": "tsconfig.json"
}
